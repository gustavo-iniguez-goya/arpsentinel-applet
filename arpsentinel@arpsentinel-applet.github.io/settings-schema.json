{
    "head": {
        "type": "header",
        "description": "ARPSentinel settings"
    },
    
    "max_devices" : {
        "type" : "spinbutton",
        "description" : "Alert me if there're more than these devices in the lan",
        "default" : 5,
        "min": 0,
        "max": 2048,
        "step": 1,
        "value": 5,
        "tooltip" : "0 disables the alert" 
    },

    "check_https" : {
        "type" : "checkbox",
        "description" : "Check if someone is spying your communications (MITM)",
        "default" : false
    },

    "https_interval" : {
        "type" : "spinbutton",
        "description" : "Seconds between checks",
        "dependency": "check_https",
        "min": 10,
        "max": 3600,
        "step": 1,
        "default" : 60,
        "value": 60,
        "tooltip" : ""
    },

    "https_domains" : {
        "type": "textview",
        "editable": "true",
        "cursor-visible": "true",
        "description": "List of domains and their fingerprint, separated by a space",
        "default": "www.facebook.com 93:6F:91:2B:AF:AD:21:6F:A5:15:25:6E:57:2C:DC:35:A1:45:1A:A5\nwww.github.com D7:9F:07:61:10:B3:92:93:E3:49:AC:89:84:5B:03:80:C1:9E:2F:8B\nwww.strava.com 78:7C:22:62:BF:73:0B:AC:99:3A:F3:6E:1B:EE:5E:D9:B8:1A:68:64\nwww.twitter.com D1:D1:93:3E:21:98:81:20:2F:69:FA:FC:A8:98:BC:EB:3C:61:20:39",
        "tooltip": "",
        "dependency": "check_https"
    },

    "hardening_mode" : {
        "type" : "checkbox",
        "description" : "Auto blacklist non whitelisted MACs",
        "default" : true
    },

    "block_command" : {
        "type" : "entry",
        "description" : "Script to block blacklisted MACs",
        "default" : "/bin/block_mac.sh",
        "tooltip" : ""
    },

    "head_alerts": {
        "type": "header",
        "description": "Choose what alerts to display"
    },

    "alert_ip_change" : {
        "type" : "checkbox",
        "description" : "IP change",
        "default" : true
    },

    "alert_mac_not_wl" : {
        "type" : "checkbox",
        "description" : "MAC is not in whitelist",
        "default" : true
    },

    "alert_mac_bl" : {
        "type" : "checkbox",
        "description" : "MAC is blacklisted",
        "default" : true
    },

    "alert_mac_new" : {
        "type" : "checkbox",
        "description" : "New MAC",
        "default" : true
    },

    "alert_unauth_arp" : {
        "type" : "checkbox",
        "description" : "Not authenticated MAC detected",
        "default" : true
    },

    "alert_too_much_arp" : {
        "type" : "checkbox",
        "description" : "Device is sending too much ARPs",
        "default" : true
    },

    "alert_ether_not_arp" : {
        "type" : "checkbox",
        "description" : "Ethernet addres is different than ARP address. This typically occurs when someone performs ARP spoofing.",
        "default" : true
    },

    "alert_global_flood" : {
        "type" : "checkbox",
        "description" : "Flood of ARPs detected",
        "default" : true
    },

    "alert_mac_change" : {
        "type" : "checkbox",
        "description" : "MAC change",
        "default" : true
    },

    "alert_mac_expired" : {
        "type" : "checkbox",
        "description" : "MAC expired",
        "default" : true
    }

}
 
